<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

会員ID<%= @customer.id %>
<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
  <%= f.label :last_name, "氏名" %>
  <%= f.text_field :last_name, autofocus: true %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name_kana, "フリガナ" %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %><br>
  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number %><br>
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %><br>
  <%= f.label :is_active, "会員ステータス" %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active_true, "有効" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active_false, "退会" %>
  <%= f.submit "変更を保存" %>
<% end %>  
