<h1>商品編集</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました<br>
  <%= @item.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>      

<%= form_with model: @item, url: admin_item_path(@item) do |f| %>
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %><br>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name, placeholder: "商品名" %><br>
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述してください" %><br>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "選択してください" %><br>
  <%= f.label :price, "税抜価格" %>
  <%= f.number_field :price, placeholder: "1000" %><br>
  <%= f.label :is_active, "販売ステータス" %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active_false, "販売停止中" %><br>
  <%= f.submit "変更を保存" %><br>
<% end %>  